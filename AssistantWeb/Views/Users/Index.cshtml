@model AssistantWeb.Models.Users.User
@{
    ViewBag.Title = "Index";
}

@Html.Partial("_loginForm", Model)
@Html.Partial("_registerForm", Model)

@section scripts{

    @if (Url.RequestContext.RouteData.Values["Id"].ToString() == "2") {
        <script>
            $("#login-form").hide();
        </script>
    }

    else
    {
        <script>
            $("#register-form").hide();
        </script>
    }

    <script>
        $(function (){

            $("#go-to-login").click(function () {

                $("#register-form").fadeOut(250, function () {
                    $("#login-form").fadeIn(250);
                });
            });

            $("#go-to-register").click(function () {

                $("#login-form").fadeOut(250, function () {
                    $("#register-form").fadeIn(250);
                });
            });
        });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}